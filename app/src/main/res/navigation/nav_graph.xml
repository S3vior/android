<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.s3vior.ui.fragment.authUi.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_singUpFragment"
            app:destination="@id/singUpFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/singUpFragment"
        android:name="com.example.s3vior.ui.fragment.authUi.SingUpFragment"
        android:label="fragment_sing_up"
        tools:layout="@layout/fragment_sing_up" />
    <fragment
        android:id="@+id/personDetailsFragment"
        android:name="com.example.s3vior.ui.fragment.personDetails.PersonDetailsFragment"
        android:label="PersonDetailsFragment" />
    <fragment
        android:id="@+id/announcementFragment"
        android:name="com.example.s3vior.ui.fragment.navigationBottomFragment.AnnouncementFragment"
        android:label="AnnouncementFragment">
        <action
            android:id="@+id/action_announcementFragment_to_personDetailsFragment"
            app:destination="@id/personDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_announcementFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.s3vior.ui.fragment.navigationBottomFragment.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/morePersonDetailFragment"
        android:name="com.example.s3vior.ui.fragment.personDetails.MorePersonDetailFragment"
        android:label="MorePersonDetailFragment" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.s3vior.ui.fragment.navigationBottomFragment.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.s3vior.ui.onBoarding.ViewPagerFragment"
        android:label="ViewPagerFragment">
        <action
            android:id="@+id/action_viewPagerFragment_to_personDetailsFragment"
            app:destination="@id/personDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.s3vior.ui.fragment.navigationBottomFragment.MoreFragment"
        android:label="MoreFragment" />
</navigation>