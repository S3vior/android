<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical"
        tools:context=".ui.fragment.navigationBottomFragment.moreFragment.settingsItems.ChangePawwordFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="تواصل معنا"
                android:textColor="@color/light_black"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="الاسم"
            android:layout_gravity="end"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:inputType="text"
            android:textAlignment="viewEnd"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/ed_style"
            android:hint="اسمك"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="البريد الالكتروني"
            android:layout_gravity="end"/>
        <EditText
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:inputType="text"
            android:textAlignment="viewEnd"
            android:background="@drawable/ed_style"
            android:hint="you@gmail.com"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="كيف يمكننا المساعدة"
            android:layout_gravity="end"/>
        <EditText
            android:id="@+id/issue_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
             android:background="@drawable/ed_style"
             android:gravity="top"
            android:hint="اخبرنا ماهي مشكلتك"
            android:textSize="@dimen/_15sdp"/>

        <Button
            android:id="@+id/sendProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="ارسال"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:background="@drawable/back_ground_buttons"/>
    </LinearLayout>
</layout>